{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            {% include "_partieAdmin/_adminbarre.html.twig" %}
            <main class="col-9 border border-light bg-white p-2">

                <h1>Categorie index</h1>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Description</th>
                            <th>Slug</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for categorie in categories %}
                        <tr>
                            <td>{{ categorie.id }}</td>
                            <td>{{ categorie.Nom }}</td>
                            <td>{{ categorie.Description }}</td>
                            <td>{{ categorie.Slug }}</td>
                            <td>
                                <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}">show</a>
                                <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <a href="{{ path('app_categorie_new') }}">Create new</a>
            </main>
        </div>
    </div>
   
           
         
    


{% endblock %}
