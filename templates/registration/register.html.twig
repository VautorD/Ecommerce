{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <section class="container my-3">
        <div class="row justify-content-center">
            <div class="col-sm-12 col-md-8 col-lg-6">
                <h1 class="h3 mb-3 font-weight-normal center">Inscription</h1>

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm) }}

                    <fieldset class="mb-3">
                        <legend> Mes informations</legend>
                        {{ form_row(registrationForm.nom) }}
                        {{ form_row(registrationForm.prenom) }}
                        {{ form_row(registrationForm.tel) }}
                    </fieldset>

                    <fieldset class="mb-3">
                        <legend> Ma connexion</legend>
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe'
                    }) }}
                    </fieldset>

                    {{ form_row(registrationForm.RGPDConsent) }}

                    <button type="submit" class="btn btn-primary">M'inscrire</button>
                    <p class="centered-text">Vous Ãªtes deja inscrit(e) ? <a href="{{ path('app_login')}}">Se connecter</a></p>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </section>
    
{% endblock %}
