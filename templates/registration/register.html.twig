{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <section class="container">
        <div class="row">
            <div class="col">
                <h1>Inscription</h1>

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm) }}

                    <fieldset class="mb-3">
                        <legend> Mes informations</legend>
                        {{ form_row(registrationForm.nom) }}
                        {{ form_row(registrationForm.prenom) }}
                        {{ form_row(registrationForm.tel) }}
                    </fieldset>

                    <fieldset class="mb-3">
                        <legend> Ma connexion</legend>
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                    </fieldset>

                    {{ form_row(registrationForm.RGPDConsent) }}

                    <button type="submit" class="btn btn-primary btn-lg my-3">M'inscrire</button>
                    <p>Vous Ãªtes deja inscrit(e) ? <a href="{{ path('app_login')}}">Se connecter</a></p>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </section>
    
{% endblock %}
